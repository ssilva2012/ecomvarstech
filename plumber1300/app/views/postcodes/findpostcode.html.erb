			    	<th>Postcode</th>
			    	<th>Price per Month</th>
			    	<th>Availablity</th>
			    	<th></th>
			  	</tr>
				<% @postcodes.each do |pc| %>
					<% if pc %>
					  <tr>

					    <td width="20%"><%= pc.postcode %></td>
					    <td width="30%">$<%= pc.price %></td>
					    <td width="20%">
