					    	<% else %>
					    		<span style='color:red'>Not Available</span>
					    	<% end %>
					    </td>
					    <td width="40%"><img style="height:30%;width:30%" src="assets/imgAddCart.png" /></td>
					  </tr>
				  	<%end %>
				<% end %>
