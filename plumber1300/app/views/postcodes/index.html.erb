<h1>Postcode Admin View</h1>

<table>
  <tr>
    <th>Postcode</th>
    <th>Price</th>
    <th>Available to Buy</th>
    <th>Max Number of Plumbers</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @postcodes.each do |postcode| %>
  <tr>
    <td><%= postcode.postcode %></td>
    <td><%= postcode.price %></td>
    <td><%= postcode.isAvailable %></td>
    <td><%= postcode.maxLimit %></td>
    <td><%= link_to 'Edit', edit_postcode_path(postcode) %></td>
    <td><%= link_to 'Delete', postcode, confirm: 'Do you want to delete this postcode?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Create New Postcode', admin_postcode_new_path %>
