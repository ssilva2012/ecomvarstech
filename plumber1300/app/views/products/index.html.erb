<h1>Listing products</h1>

<table>
  <tr>
    <th>Productcode</th>
    <th>Name</th>
    <th>Uom</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.productCode %></td>
    <td><%= product.name %></td>
    <td><%= product.uom %></td>
    <td><%= product.category %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Delete', product, confirm: 'Do you need to delete this product?', method: :delete %></td>
  </tr>
<% end %>
</table>

