<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'User e-mail' %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label 'User Type' %><br />
    <%= f.text_field :userType %>
  </div>
  <div class="field">
    <%= f.label 'Remember Me' %><br />
    <%= f.number_field :remember, :value => 0, :in => 0...2 %>
  </div>
  <div class="field">
    <%= f.label 'Enabled' %><br />
    <%= f.number_field :enabled, :value => 1, :in => 0...2%>
  </div>
  <div class="field">
    <%= f.label 'Reset Requested'%><br />
    <%= f.number_field :reset, :value => 0, :in => 0...2%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
